<%= form_for @job, html: { multipart: true } do |i| %>

    <div class = "form-group">
    <%= i.label :title %>
    <%= i.text_field :title, class: "form-control" %>
    </div>

    <div class = "form-group">
    <%= i.label :company %>
    <%= i.text_field :company, class: "form-control" %>
    </div> 

    <div class="form-group">
    <%= i.label :description %> <%# post description %>
    <%= i.text_area :description, class: "form-control" %>
    </div>

    <%= i.submit "Add Job", class: "btn btn-info" %>


<% end %> 