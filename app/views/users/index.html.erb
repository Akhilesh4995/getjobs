		    <b>Job Title </b></br>
		    <%= jobs.title %> </br>
		    <b>Posted By</b> </br>
		    <%= " #{jobs.user.username}" %> </br>
		    <b>Company</b> </br>
		    <%= " #{jobs.company}" %> </br>
		    <b>Description</b> </br>
		    <%= " #{jobs.description}" %> </br>
		    <%= link_to "View Applicants", job_applicants_path(jobs.id), class: "btn btn-info" %></br>
		    <div></br></div>
		    <% end %>
		</div>
	</div>
</div>
<% end %>