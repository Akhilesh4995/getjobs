<%= form_for([@job, @applicant]) do |i| %>

    <div class = "form-group">
    <%= i.label :firstname %>
    <%= i.text_field :firstname, class: "form-control" %>
    </div>

    <div class = "form-group">
    <%= i.label :lastname %>
    <%= i.text_field :lastname, class: "form-control" %>
    </div> 

    <div class = "form-group">
    <%= i.label :email %>
    <%= i.text_field :emailid, class: "form-control" %>
    </div> 

    <div class = "form-group">
    <%= i.label :interest %>
    <%= i.text_field :interest, class: "form-control" %>
    </div> 

    <div class="form-group">
    <%= i.label :experience %> <%# post description %>
    <%= i.text_area :experience, class: "form-control" %>
    </div>

    <%= i.submit "Apply", class: "btn btn-info" %>


<% end %> 